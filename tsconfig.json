{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@public/*":["./public/*"],
      "@colors": ["./src/styles/variables/_colors.scss"],
      "@breakpoints": ["./src/styles/variables/_breakpoints.scss"],
      "@fonts": ["./src/styles/variables/_font-family.scss"],
      "@mixins/*": ["./src/styles/mixins/*"],
      "@typography/*": ["./src/styles/typography/*"],
      "@variables/*": ["./src/styles/variables/*"],
      "@common/*": ["./src/components/common/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
